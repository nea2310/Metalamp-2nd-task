extends ../ui-kit-layout/ui-kit-layout.pug

include ../../components/header/header.pug
include ../../components/footer/footer.pug

block title
  title Headers & Footers
block content
  -
    const headerLinks = [
      {name: 'О нас'},
      {name: 'Услуги', subMenu: ['Ссылка 1', 'Ссылка 2', 'Ссылка 3']},
      {name: 'Вакансии'},
      {name: 'Новости'},
      {name: 'Соглашения', subMenu: ['Ссылка 4', 'Ссылка 5', 'Ссылка 6']},
    ]
    const footerLinks = [
      {name: 'навигация', items: ['О нас', 'Новости', 'Служба поддержки', 'Услуги']},
      {name: 'О нас', items: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы']},
      {name: 'служба поддержки', items: ['Соглашения', 'Сообщества', 'Связь с нами']},
    ]
  main(class="headers-footers")
    div(class='headers-footers__header')
      +header({menu: headerLinks, authorized: false})
    div(class='headers-footers__header')
      +header({menu: headerLinks, authorized: true})
    div(class='headers-footers__footer')
      +footer({menu: footerLinks})