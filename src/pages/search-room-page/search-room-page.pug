extends ../layout/layout.pug

include ../../components/filter-form/filter-form.pug
include ../../components/room-card/room-card.pug
include ../../components/pagination/pagination.pug
include ../../components/go-up-button/go-up-button.pug

block title
  title Search room
block content 
  main(class = 'search-room-page')
    section(class = 'search-room-page__filter-form-wrapper')
      +filter-form()
    section(class = 'search-room-page__search-results-wrapper')
      h1(class = 'search-room-page__title') Номера, которые мы для вас подобрали
      div(class = 'search-room-page__search-results')
        -let n = 0
          while n < 12
            div(class = 'search-room-page__room-card')
              +room-card({
                imageList: [
                  require('@pag/cards/image/room-1.jpg'),
                  require('@pag/cards/image/room-2.jpg'),
                  require('@pag/cards/image/room-3.jpg'),
                  require('@pag/cards/image/room-4.jpg'),
                  ],
                roomNumber: '888',
                isLux: 'люкс',
                roomPrice: '9 990',
                feedbackAmount: '145',
                ratingName: 'rating' + n++})
      div(class = 'search-room-page__pagination-wrapper')
        +pagination()
      div(class = 'search-room-page__go-up-button-wrapper')
        +go-up-button()

