extends ../layout/layout.pug
include ../../components/feature/feature.pug
include ../../components/chart/chart.pug
include ../../components/booking/booking.pug
include ../../components/feedback/feedback.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/dropdown/dropdown.pug
include ../../components/button/button.pug
block title
  title Room details
block content 
  main(class = 'room-details-page')
    h1 подробная информация о номере
    section(class = 'room-details-page__banner-wrapper')
      image(class = 'room-details-page__img-1' alt = 'фоновое изображение - спальня' src = require('@pag/room-details-page/image/room-details-1.jpg'))
      image(class = 'room-details-page__img-2' alt = 'фоновое изображение - спальня' src = require('@pag/room-details-page/image/room-details-2.jpg'))
      image(class = 'room-details-page__img-3' alt = 'фоновое изображение - спальня' src = require('@pag/room-details-page/image/room-details-3.jpg'))
    section(class = 'room-details-page__main-info-wrapper')
      div(class = 'room-details-page__room-info-wrapper')
        h2 Сведения о номере
        div(class = 'room-details-page__room-info')
          div(class = 'room-details-page__room-info-item')
            +feature(
              {image: require('@pag/room-details-page/image/smile.svg'),
              name: 'Комфорт',
              description: 'Шумопоглощающие стены',
              alt: 'smile'}
              )
          div(class = 'room-details-page__room-info-item')
            +feature(
              {image: require('@pag/room-details-page/image/city.svg'),
              name: 'Удобство',
              description: 'Окно в каждой из спален',
              alt: 'city'}
              )
          div(class = 'room-details-page__room-info-item')
            +feature(
              {image: require('@pag/room-details-page/image/fireplace.svg'),
              name: 'Уют',
              description: 'Номер оснащен камином',
              alt: 'fireplace'}
              )
      div(class = 'room-details-page__room-impress-wrapper')
        h2 Впечатления от номера
        div(class = 'room-details-page__room-impress')
          +chart()
      div(class = 'room-details-page__booking-wrapper')
        +booking({
          roomNumber: '888',
          isLux: 'люкс',
          roomPrice: '9 990',
          daysAmount: '4',
          totalPrice: '39 960',
          sale: '2 179',
          saleTotal: '0',
          extraTotal: '300',
          totalAmount: '38 081'})
      div(class = 'room-details-page__feedback-wrapper')
        div(class = 'room-details-page__feedback-header')
          h2 Отзывы посетителей номера
          p(class = 'room-details-page__feedback-header-quant') 2 отзыва
        div(class = 'room-details-page__feedback')
          div(class = 'room-details-page__feedback-item')
            +feedback(
              {image: require('@pag/room-details-page/image/murad.jpg'),
              name: 'Мурад Сарафанов',
              date: '5 дней назад',
              description: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
              alt: 'Мурад Сарафанов'}
              )
          div(class = 'room-details-page__feedback-item')
            +feedback(
              {image: require('@pag/room-details-page/image/patricia.jpg'),
              name: 'Патрисия Стёклышкова',
              date: 'Неделю назад',
              description: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, Каждый день новое блюдо и десерт как комплимент',
              alt: 'Патрисия Стеклышкова'}
              )
      div(class = 'room-details-page__rules-wrapper')
        h2(class = 'room-details-page__rules-header') Правила
        div(class = 'room-details-page__rules')
          +bullet-list(
            {
            categories: ['Нельзя с питомцами',
              'Без вечеринок и мероприятий',
              'Время прибытия — после 13:00, а выезд до 12:00']}
            )
      div(class = 'room-details-page__cancel-wrapper')
        h2(class = 'room-details-page__cancel-header')  Отмена
        p(class = 'room-details-page__cancel') Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги. 

