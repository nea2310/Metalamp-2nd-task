include ../error-message/error-message.pug

mixin input-field(options ={})
  -
    const { 
      width = '',
      placeholder = '',
      labelText = '',
      inputType = 'text',
    } = options

    const prepareOptions = require ('@com/input-field/input-field-utils.js').default;

    const {
      elementName,
      widthChecked,
      } = prepareOptions({
        width,
    });

  div(class = `${elementName} js-${elementName} ${elementName}_width_${widthChecked}`)
    label(class = `${elementName}__label`)
      if labelText
        h3(class = `${elementName}__label-text`)= labelText
      input(class = `${elementName}__input js-${elementName}__input` placeholder = placeholder type = inputType )