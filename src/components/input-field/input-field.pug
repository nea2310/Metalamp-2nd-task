mixin input(options={labelText: '', img: false, extra:'',})
	-
		let elemName='input-field'
	div(class = elemName +' ' + elemName + '-' + options.width)
		label(class = elemName+'__label')
			if options.labelText
				p(class = elemName+'__label-text')=options.labelText
			if options.img
				button(class = elemName+'__link')
					img(class = elemName+'__img', src = "assets/img/interface/arrow-forward.svg")
			input(class = elemName + '__input ' + options.extra, placeholder = options.placeholder, type = 'text' value = '')





