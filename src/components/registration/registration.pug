include ../input-field/input-field.pug
include ../radiobuttons/radiobuttons.pug
include ../toggle/toggle.pug
include ../button/button.pug

mixin registration()
  -
    const elementName = 'registration'

  div(class = `${elementName} js-${elementName}`)
    form(class = `${elementName}__registration-form js-${elementName}__registration-form`)
      h1(class = `${elementName}__header`) Регистрация аккаунта
      fieldset(class = `${elementName}__name-surname`)
        div(class = `${elementName}__name`)
          +input(
            {width: 'wide',
            placeholder: 'имя',
            inputType: 'text',
            } 
            )
        div(class = `${elementName}__surname`)
          +input(
            {width: 'wide',
            placeholder: 'фамилия',
            inputType: 'text',
            } 
              )
      div(class = `${elementName}__radiobuttons`)
        +radiobuttons({categories:
          [{name:'Мужчина', checked: true}, 
          {name:'Женщина'}],
          radioGroupName: 'gender'})
      div(class = `${elementName}__birth-date`)
        +input(
          {width: 'wide',
          placeholder: 'ДД.ММ.ГГГГ',
          labelText: 'дата рождения',
          inputType: 'text',
          validation: 'date'
          } 
          )
      fieldset(class = `${elementName}__credentials`) 
        legend(class = `${elementName}__credentials-legend`)  данные для входа в сервис
        div(class = `${elementName}__email`)
          +input(
            {width: 'wide',
            placeholder: 'Email',
            inputType: 'email',
            validation: 'email'
            } 
            )
        div(class = `${elementName}__password`)
          +input(
            {width: 'wide',
            placeholder: 'Пароль',
            inputType: 'password',
            } 
            )
      div(class = `${elementName}__special-offer`)
        +toggle(
          {name: 'Получать спецпредложения'}
          )
      div(class = `${elementName}__search`)
        +button(
          {text: 'перейти к оплате',
          type: 'submit',
          length: 'very-long',
          width: 'wide',
          color: 'dark',
          image: true}
          )
      div(class = `${elementName}__go-to-login` role='region' aria-label = 'Уже есть аккаунт на Toxin')
        p(class = `${elementName}__go-to-login-legend` ) Уже есть аккаунт на Toxin
        +button(
          {text: 'войти',
          type: 'link',
          length: 'short',
          width: 'wide',
          color: 'light',
          href: 'https://test/test'}
          )
