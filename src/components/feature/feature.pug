mixin feature(options = {})
  -

    const { 
      image = '',
      name = '',
      description = '',
      alt = '',
    } = options

    const prepareOptions = require ('@com/feature/feature-utils.js').default;

    const {
      elementName,
      imageChecked,
    } = prepareOptions({ image });

  div(class = elementName)
    div(class = `${elementName}__image-wrapper`)
      img(class = `${elementName}__image` src = require(`@com/feature/image/${imageChecked}.svg`) alt = alt)
    span(class = `${elementName}__name`)= name
    span(class = `${elementName}__description`)= description





