mixin feature(options = {})
  -

    const { 
      imagePath = require('@/shared/images/logo-purple.svg'),
      name = '',
      description = '',
      alt = ''} = options

    const prepareOptions = require ('@com/feature/feature-utils.js').default;

    const { elementName, imagePathChecked} = prepareOptions({imagePath});

  div(class = elementName)
    img(class = `${elementName}__image` src = imagePathChecked alt = alt)
    span(class = `${elementName}__name`)= name
    span(class = `${elementName}__description`)= description





