mixin radiobuttons(options={})
  -
    let elementName='radiobuttons'
    let labelStyle = options.labelStyle ?? ''
    let labelText = options.labelText ?? ''
    let categories = options.categories ?? {}
    let radioGroupName = options.radioGroupName ?? ''
    let js = options.js ?? ''
  fieldset(class = elementName)
    p(class = elementName + '__label ' + labelStyle)=labelText
    ul(class = elementName + '__list')
      each value, index in categories
        li(class = elementName + '__category-wrapper')
          label(class = elementName + '__category')
            input(class = elementName + '__category-checkbox '+ value.js, type = "radio", name = radioGroupName, value = value.name, checked = value.checked)
            span(class = elementName + '__category-radiomark')
            p(class = elementName + '__category-name ')=value.name