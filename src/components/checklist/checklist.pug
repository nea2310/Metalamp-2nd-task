mixin checklist(options = {})
  -
    const {categories = [],
      isExpanded = false,
      isRich = false,
      labelText = ''} = options

    const elementName = 'checklist'

    const style = isExpanded ? `${elementName}_collapsing` : ''
    const listStyle = isExpanded ? `${elementName}__list-wrapper_hidden` : ''
    const labelStyle = isExpanded ? `${elementName}__label_collapsing` : `${elementName}__label_expanded`
    const tipStyle = !isExpanded ? `${elementName}__image_non-collapsing` : ''
    const nameStyle = isRich ? `${elementName}__category-name_rich` : ''

  fieldset(class = `${elementName} js-${elementName} ${style}`)
    p(class = `${elementName}__label js-${elementName}__label ${labelStyle}` tabindex = 0)= labelText
      image(class = `${elementName}__image js-${elementName}__image ${elementName}__image_collapsed ${tipStyle}` 
        src = require('@com/checklist/image/expand-more.svg') alt = 'развернуть')
    ul(class = `${elementName}__list-wrapper js-${elementName}__list-wrapper ${listStyle}`)
      if Array.isArray(categories) && categories.length
        each value in categories
          - const {name = '', description = ''} = value
          li(class = `${elementName}__category-wrapper`)
            label(class = `${elementName}__category`)
              if name
                input(class = `${elementName}__category-checkbox` type="checkbox" name = labelText value = name)
                span(class = `${elementName}__category-checkmark`)
                div(class = `${elementName}__category-text`)
                  p(class = `${elementName}__category-name ${nameStyle}`)= name
                  if isRich && description
                    p(class = `${elementName}__category-description`)= description