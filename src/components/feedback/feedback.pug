include ../like-button/like-button.pug

mixin feedback(options = {})
  -
    const {
      imagePath = require('@/shared/images/logo-purple.svg'),
      name = '', 
      date = '',
      description = '',
      alt = '',
      isLiked = false,
      likeAmount = 0,
    } = options
    
    const prepareOptions = require ('@com/feedback/feedback-utils.js').default;

    const { elementName, imagePathChecked} = prepareOptions({imagePath});

  div(class = elementName)
    img(class = `${elementName}__image` src = imagePathChecked alt = alt)
    span(class = `${elementName}__name`)= name
    span(class = `${elementName}__date`)= date
    div(class = `${elementName}__like`)
      +like-button({
        isLiked, 
        likeAmount,
      })
    p(class = `${elementName}__description`)= description




