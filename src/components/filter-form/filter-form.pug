include ../date-dropdown/date-dropdown.pug
include ../dropdown/dropdown.pug
include ../range-slider/range-slider.pug
include ../checklist/checklist.pug
include ../button/button.pug
mixin filter-form()
  -
    let elemName ='filter-form'
  form(class = elemName + ' js-' + elemName)
    div(class = elemName + '__show-filter ' + 'js-' + elemName + '__show-filter')
      image(class = elemName + '__show-filter-image' src = require('@com/filter-form/image/filter.svg') alt = 'фильтр поиска')
    div(class = elemName + '__wrapper ' + 'js-' + elemName + '__wrapper')
      div(class = elemName + '__calendar-wrapper')
        +date-dropdown(
          {width:'narrow',
          type: 'filterDateDropDown',
          labelTextFromTo: 'даты пребывания в отеле'}
          )
      div(class = elemName + '__guests-wrapper')
        +dropdown(
          {categories:
            {cat1: {displayName: 'взрослые', type: 'гость', declensions: 'гость,гостя,гостей',  defaultCount: 0, minCount: 0, maxCount: 99}, 
            cat2: {displayName: 'дети', type: 'гость', declensions: 'гость,гостя,гостей', defaultCount: 0, minCount: 0, maxCount: 99}, 
            cat3: {displayName: 'младенцы', type: 'младенец', declensions: 'младенец,младенца,младенцев', defaultCount: 0, minCount: 0, maxCount: 99}}, 
          type: 'dropDownGuests',
          placeholder: 'Сколько гостей',
          buttons: true,
          labelText: 'гости',
          width: 'narrow'}
          )
      div(class = elemName + '__price-filter-wrapper')
        +range-slider(
          {labelText: 'диапазон цены',
          type: 'double', 
          min:1000, 
          max:15000, 
          step:1, 
          from:5000, 
          to:10000, 
          isMinMaxHidden:'true', 
          isFromToHidden:'true',
          text: 'Стоимость за сутки пребывания в номере'}
          )
      div(class = elemName + '__house-rules-wrapper')
        +checklist(
          {categories:
            {cat1: {name:'Можно курить'}, 
            cat2:{name:'Можно с питомцами'}, 
            cat3:{name:'Можно пригласить гостей (до 10 человек)'}},
            expand: false, 
          labelText: 'правила дома',
          checkListName: 'правила дома'}
          )
      div(class = elemName + '__accessability-wrapper')
        +checklist(
          {categories:
            {cat1: {name:'Широкий коридор', description: 'Ширина коридоров в номере не менее 91 см'}, 
            cat2:{name:'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист и проводит до номера'}},
            expand: false,
            rich: true, 
          labelText: 'доступность',
          checkListName: 'доступность'}
          )
      div(class = elemName + '__facilities-wrapper')
        +dropdown(
          {categories:
            {cat1: {displayName: 'спальни', type: 'спальня', declensions: 'спальня,спальни,спален', defaultCount: 0, minCount: 0, maxCount: 5}, 
            cat2: {displayName: 'кровати', type: 'кровать', declensions: 'кровать,кровати,кроватей', defaultCount: 0, minCount: 0, maxCount: 10}, 
            cat3: {displayName: 'ванные комнаты', type: 'ванная комната', declensions: 'ванная комната,ванные комнаты,ванных комнат', defaultCount: 0, minCount: 0, maxCount: 3}}, 
          type: 'dropDownRooms',
          placeholder: 'Сколько комнат',
          labelText: 'удобства номера',
          width: 'narrow'}
          )
      div(class = elemName + '__facilities-adv-wrapper')
        +checklist(
          {categories:
            {cat1: {name:'Завтрак'}, 
            cat2:{name:'Письменный стол'}, 
            cat3:{name:'Стул для кормления'}, 
            cat4:{name:'Кроватка'}, 
            cat5:{name:'Телевизор'}, 
            cat6:{name:'Шампунь'},},
          expand: true, 
          labelText: 'дополнительные удобства',}
          )




