mixin rate-button({labelText = '', name = ''} = {})
  -
    const elementName = 'rate-button'
    const rates = ['Отлично', 'Хорошо', 'Удовлетворительно', 'Плохо', 'Очень плохо']

  fieldset(class = elementName)
    legend(class = `${elementName}__caption`)= labelText
    div(class = `${elementName}__star-image-group`)
    div(class = `${elementName}__group`)
      for rateValue, index in rates
        input(class = `${elementName}__star` type = 'radio' name = name value = index aria-label = rateValue)
        span(class = `${elementName}__star-image`)
