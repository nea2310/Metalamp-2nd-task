include ../button/button.pug
include ../date-dropdown/date-dropdown.pug
include ../dropdown/dropdown.pug
include ../error-message/error-message.pug

mixin search-room({ actionAddress = '/test.php' } = {})
  -
    const {
      dropdownGuests,
      dateDropdown,
      button
    } = require('@com/search-room/search-room.json')

    const elementName = 'search-room'

  form(class = `${elementName} js-${elementName}` method = "get" action = actionAddress)
    div(class = `${elementName}__error-message js-${elementName}__error-message`)
      +error-message()
    h1(class = `${elementName}__header`) Найдём номера под ваши пожелания
    div(class = `${elementName}__date-dropdown`)
      +date-dropdown(dateDropdown)
    div(class = `${elementName}__guests`)
      +dropdown(dropdownGuests)
    div(class = `${elementName}__search`)
      +button(button)

