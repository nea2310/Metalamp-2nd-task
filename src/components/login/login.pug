include ../button/button.pug
include ../input-field/input-field.pug
include ../error-message/error-message.pug

mixin login({ actionAddress = '/test.php' } = {})
  -
    const elementName = 'login'

  div(class = `${elementName} js-${elementName}`)
    div(class = `${elementName}__error-message js-${elementName}__error-message`)
      +error-message()
    form(class = `${elementName}__login-form js-${elementName}__login-form` method = "post" action = actionAddress)
      h1(class = `${elementName}__header`) Войти
      fieldset(class = `${elementName}__credentials`) 
        div(class = `${elementName}__email`)
          +input-field({
            width: 'wide',
            placeholder: 'Email',
            inputType: 'email',
            validation: 'email',
          })
        div(class = `${elementName}__password`)
          +input-field({
            width: 'wide',
            placeholder: 'Пароль',
            inputType: 'password',
          })
      div(class = `${elementName}__login-button`)
        +button({
          text: 'войти',
          type: 'submit',
          length: 'very-long',
          width: 'wide',
          color: 'dark',
          hasArrow: true,
        })
    div(class = `${elementName}__go-to-registration` role="region" aria-label = "Нет аккаунта на Toxin")
      span(class = `${elementName}__go-to-registration-legend`) Нет аккаунта на Toxin?
      div(class = `${elementName}__create`)
        +button({
          text: 'создать',
          type: 'link',
          length: 'short',
          width: 'wide',
          color: 'light',
          href: 'https://test/test',
        })
